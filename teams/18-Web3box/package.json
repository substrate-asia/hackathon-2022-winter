{
  "name": "Web3box",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/config/jest/babelTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|cjs|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
      "!file-loader!(.*)": "<rootDir>/node_modules/jsstore/dist/jsstore.worker.min.js"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.3",
    "@polkadot/api": "^9.2.1",
    "@polkadot/api-contract": "^9.2.1",
    "@polkadot/keyring": "^10.1.4",
    "@polkadot/networks": "^10.1.4",
    "@polkadot/phishing": "^0.18.5",
    "@polkadot/rpc-provider": "^9.2.1",
    "@polkadot/types": "^9.2.1",
    "@polkadot/ui-keyring": "^2.9.5",
    "@polkadot/ui-settings": "^2.9.5",
    "@polkadot/util": "^10.1.4",
    "@polkadot/util-crypto": "^10.1.4",
    "@talisman-connect/components": "^1.1.1",
    "@talismn/api-react-hooks": "~0",
    "@talismn/chaindata-js": "~0",
    "@talismn/util": "~0",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "antd": "^4.22.4",
    "babel-jest": "^27.4.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-named-asset-import": "^0.3.8",
    "babel-preset-react-app": "^10.0.1",
    "bfj": "^7.0.2",
    "browserslist": "^4.18.1",
    "camelcase": "^6.2.1",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.2.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-tabs": "^1.0.1",
    "eslint": "^8.3.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-webpack-plugin": "^3.1.1",
    "ethers": "^5.7.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.0.0",
    "generate-avatar": "^1.4.10",
    "html-webpack-plugin": "^5.5.0",
    "https": "^1.0.0",
    "https-browserify": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-resolve": "^27.4.2",
    "jest-watch-typeahead": "^1.0.0",
    "js-sha3": "^0.8.0",
    "jsstore": "^4.4.3",
    "mini-css-extract-plugin": "^2.4.5",
    "node-fetch": "^3.2.10",
    "node-gyp": "^9.3.0",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.0.1",
    "prompts": "^2.4.2",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-dev-utils": "^12.0.1",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-refresh": "^0.11.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^6.3.0",
    "redux": "^4.2.0",
    "redux-persist": "^6.0.0",
    "resolve": "^1.20.0",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^12.3.0",
    "semver": "^7.3.5",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.5",
    "tailwindcss": "^3.0.2",
    "terser-webpack-plugin": "^5.2.5",
    "web-vitals": "^2.1.0",
    "webpack": "^5.64.4",
    "webpack-dev-server": "^4.6.0",
    "webpack-manifest-plugin": "^4.0.2",
    "workbox-webpack-plugin": "^6.4.1"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "jest src/api/polkadot.test.js",
    "electron": "concurrently \"node scripts/start.js\" \"wait-on http://localhost:3000 && electron .\"",
    "dist-win32": "electron-builder --win --ia32",
    "dist-win64": "electron-builder --win --x64",
    "dist-mac": "electron-builder --mac",
    "package": "electron-builder build --mac --win -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "build": {
    "productName": "web3box",
    "appId": "web3box",
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/web3box.ico",
      "uninstallerIcon": "build/web3box.ico",
      "installerHeaderIcon": "build/web3box.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "builder"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "icon": "build/web3box.png",
      "artifactName": "${productName}_Setup_${version}_alpha.${ext}"
    },
    "win": {
      "target": "nsis",
      "icon": "build/web3box.icon",
      "artifactName": "${productName}_Setup_${version}_alpha.${ext}"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not ie <= 99",
      "not android <= 4.4.4",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.0.2",
    "electron-builder": "^23.3.3",
    "electron-is-dev": "^2.0.0",
    "file-loader": "^6.2.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "rmrk-tools": "^2.0.81-beta",
    "wait-on": "^6.0.1"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
